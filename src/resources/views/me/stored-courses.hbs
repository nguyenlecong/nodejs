<form class="mt-4" name="container-form" method="POST" action="/courses/handle-form-actions">
  <div>
    <h3>My Courses</h2>
    {{!-- {{#if deletedCount}} --}}
    <a href="/me/trash/courses">Trash ({{deletedCount}})</a>
    {{!-- {{/if}} --}}

    <div class="mt-4 d-flex align-items-center">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
        <label class="form-check-label" for="checkbox-all">
          Select all
        </label>
      </div>

      <select class="form-control form-control-sm checkbox-select-all-options" name="action" required="required">
        <option value="">--- Action ---</option>
        <option value="delete">Delete</option>
      </select>

      {{!-- <button class="btn btn-primary btn-sm check-all-submit-btn disabled">Excute</button> --}}
      <button class="btn btn-primary btn-sm check-all-submit-btn" disabled="disabled">Excute</button>
    
    </div>
  </div>

  <table class="table mt-4">
      <thead>
          <tr>
              <th></th>
              <th scope="col">#</th>
              <th scope="col">
                Name
                {{{sorttable 'name' _sort}}}
              </th>
              <th scope="col">Level
                {{{sorttable 'level' _sort}}}
              </th>
              <th scope="col" colspan="2">Created Time
                {{{sorttable 'createdAt' _sort}}}
              </th>
          </tr>
      </thead>
      <tbody>
          {{#each courses}}
          <tr>
              <td>  
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
                </div>
              </td>
              <th scope="row">{{sum @index 1}}</th>
              <td>{{this.name}}</td>
              <td>{{this.level}}</td>
              <td>{{this.createdAt}}</td>
              <td>
                  <a href="/courses/{{this._id}}/edit" class="btn btn-link">Update</a>
                  <a href="" class="btn btn-link" data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#delete-course-modal">Delete</a>
              </td>
          </tr>
          {{else}}
          <tr>
            <td colspan="5" class="text-center">
              There is nothing here! Hehehehe.
              <a href="/courses/create">Add course</a>
            </td>
          </tr>
          {{/each}}
      </tbody>
  </table>
</form>

{{!-- Delete hidden form --}}
    <form method="POST" name="delete-course-form">
    </form>

{{!-- Confirm delete course --}}
<div id="delete-course-modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete course?</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure?
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  var courseId

  const exampleModal = document.getElementById('delete-course-modal')
  if (exampleModal) {
    exampleModal.addEventListener('show.bs.modal', event => {
      const button = event.relatedTarget
      courseId = button.getAttribute('data-id')
    })
  }

  const deleteForm = document.forms['delete-course-form']
  const btnDeleteCourse = document.getElementById('btn-delete-course')
  btnDeleteCourse.onclick = () => {
    deleteForm.action = '/courses/' + courseId + '?_method=DELETE'
    deleteForm.submit()
  }
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var checkboxAll = $('#checkbox-all')
    var courseItemCheckbox = $('input[name="courseIds[]"]')
    
    // Checkbox all changed
    checkboxAll.change(function() {
      var isCheckedAll = $(this).prop('checked')
      courseItemCheckbox.prop('checked', isCheckedAll)
      renderCheckAllSubmitBtn()
    })

    // Course item checkbox changed
    courseItemCheckbox.change(function() {
      var isCheckedAll = courseItemCheckbox.length === $('input[name="courseIds[]"]:checked').length
      checkboxAll.prop('checked', isCheckedAll)
      renderCheckAllSubmitBtn()
    })

    // Re-render check all submit button
    var checkAllSubmitBtn = $('.check-all-submit-btn')
    function renderCheckAllSubmitBtn() {
      var checkedCount = $('input[name="courseIds[]"]:checked').length
      if (checkedCount > 0) {
        checkAllSubmitBtn.attr('disabled', false)
        //checkAllSubmitBtn.removeClass('disabled')
      } else {
        checkAllSubmitBtn.attr('disabled', true)
        //checkAllSubmitBtn.addClass('disabled')
      }
    }

